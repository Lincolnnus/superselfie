<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_height="0dp">
        <ImageView
                android:layout_width="0dp" android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/imageView1"/>
        <ImageView android:layout_width="0dp" android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:id="@+id/imageView2"/>
        <ImageView android:layout_width="0dp" android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:id="@+id/imageView3"/>
        <ImageView android:layout_width="0dp" android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:id="@+id/imageView4"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                  android:layout_weight="1"
                  android:layout_height="0dp" android:id="@+id/linearLayout">
        <ImageView android:layout_width="0dp" android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:id="@+id/imageView5"/>
        <ImageView android:layout_width="0dp" android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:id="@+id/imageView6"/>
        <ImageView android:layout_width="0dp" android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:id="@+id/imageView7"/>
        <ImageView android:layout_width="0dp" android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:id="@+id/imageView8"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                  android:layout_weight="1"
                  android:layout_height="0dp" android:id="@+id/linearLayout2">
        <ImageView android:layout_width="0dp" android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:id="@+id/imageView9"/>
        <ImageView android:layout_width="0dp" android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:id="@+id/imageView10"/>
        <ImageView android:layout_width="0dp" android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:id="@+id/imageView11"/>
        <ImageView android:layout_width="0dp" android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:id="@+id/imageView12"/>
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                  android:layout_weight="1"
                  android:layout_height="0dp" android:id="@+id/linearLayout3">
        <ImageView android:layout_width="0dp" android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:id="@+id/imageView13"/>
        <ImageView android:layout_width="0dp" android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:id="@+id/imageView14"/>
        <ImageView android:layout_width="0dp" android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:id="@+id/imageView15"/>
        <ImageView android:layout_width="0dp" android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:id="@+id/imageView16"/>
    </LinearLayout>
</LinearLayout>